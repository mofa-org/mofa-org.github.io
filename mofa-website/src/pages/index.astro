      const copyBtn = document.getElementById('main-copy-btn');
      if (copyBtn) {
        copyBtn.addEventListener('click', copyToClipboard);
      }
      
      // å¯åŠ¨åˆå§‹åŠ¨ç”»
      const initialContent = document.querySelector('.terminal-content.active');
      if (initialContent) {
        setTimeout(() => {
          startTypingSequence(initialContent);
