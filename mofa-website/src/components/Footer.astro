<style>
  /* 移动端：将返回顶部按钮移至左侧，避免与目录按钮重叠 */
  @media (max-width: 768px) {
    #back-to-top {
      left: 20px !important;
      right: auto !important;
      bottom: 30px !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const backToTopButton = document.getElementById('back-to-top');
    const starCtaSection = document.querySelector('.star-cta-section');
    const wechatLink = document.getElementById('wechat-link');
    const wechatModal = document.getElementById('wechat-modal');
    const closeWechatModal = document.getElementById('close-wechat-modal');

    // 返回顶部按钮逻辑
    if (backToTopButton) {
      window.addEventListener('scroll', function() {
        if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
          backToTopButton.style.display = "block";
        } else {
          backToTopButton.style.display = "none";
        }
      });

      backToTopButton.addEventListener('click', function(){
        window.scrollTo({top: 0, behavior: 'smooth'});
      });
    }

    // Star CTA 简单交互
    if (starCtaSection) {
      const starButton = starCtaSection.querySelector('.star-button');
      if (starButton) {
        starButton.addEventListener('click', function() {
          // 添加点击反馈
          this.style.transform = 'scale(0.98)';
          setTimeout(() => {
            this.style.transform = '';
          }, 100);
        });
      }
    }

    // WeChat 模态框逻辑
    if (wechatLink && wechatModal && closeWechatModal) {
      wechatLink.addEventListener('click', function(e) {
        e.preventDefault();
        wechatModal.style.display = 'flex';
      });

      closeWechatModal.addEventListener('click', function() {
        wechatModal.style.display = 'none';
      });

      wechatModal.addEventListener('click', function(e) {
        if (e.target === wechatModal) {
          wechatModal.style.display = 'none';
        }
      });
    }
  });
</script>

